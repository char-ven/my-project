apiVersion: v1
kind: ReplicationController
metadata:
  name: login-rc
  namespace: login
spec:
  replicas: 1
  selector:
    microservices: login
  template:
    metadata:
      name: login-pod
      labels:
        microservices: login
    spec:
      containers:
        - name: login-container
          image: mithuntechnologies/maven-web-application:1
          ports:
            - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: login-service
  namespace: login
spec:
  type: NodePort
  selector:
    microservices: login
  ports:
    - port: 80
      targetPort: 8080

---
apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: login-rs
  namespace: login
spec:
  replicas: 2
  selector:
    matchLabels:
      microservices: login
  template:
    metadata:
      labels:
        microservices: login
    spec:
      containers:
        - name: replicasets-container
          image: mithuntechnologies/maven-web-application:1
          ports:
            - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: login-service
  namespcae: login
